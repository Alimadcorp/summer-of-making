<div class="fixed inset-0 z-[9999] bg-black/50 hidden"
     id="signup-wizard"
     data-controller="signup-wizard"
     data-signup-wizard-target="modal"
     data-action="click->signup-wizard#closeOnOutsideClick">

  <div class="flex items-center justify-center w-full h-full p-4">
    <div class="bg-[#F3ECD8] w-[75vw] h-[65vh] max-w-3xl max-h-[60vh] flex flex-col relative overflow-hidden rounded-2xl shadow-2xl border-4 border-[#E4DCC6]"
         data-signup-wizard-target="container">

    <button type="button" class="absolute top-4 right-4 text-gray-600 hover:text-vintage-red cursor-pointer transition-colors duration-200 z-20"
            data-action="click->signup-wizard#close">
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <div class="flex-1 p-8 space-y-6 overflow-y-auto">
      <div data-signup-wizard-target="videoContainer" class="text-center space-y-6">
        <div class="space-y-2">
          <p id="signup-wizard-generic-message" class="text-saddle-taupe max-w-2xl mx-auto">
            Your invitation has been sent, here is what is next;
          </p>
        </div>

        <div class="p-2 max-w-3xl mx-auto">
          <div class="aspect-video bg-gray-800 rounded-lg flex items-center justify-center text-white relative">
            <%= video_tag "count.mp4",
                         controls: true,
                         autoplay: false,
                         muted: false,
                         preload: "auto",
                         playsinline: true,
                         class: "w-full h-full rounded-lg",
                         data: {
                           signup_wizard_target: "introVideo",
                           action: "ended->signup-wizard#handleVideoEnded"
                         } %>
          </div>
        </div>
      </div>
    </div>

    </div>
  </div>
</div>
