<div data-controller="image-viewer">
  <div data-image-viewer-target="modal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4 bg-black bg-opacity-75" data-action="click->image-viewer#closeBackground">
    <div class="relative max-w-7xl max-h-[90vh] w-full flex items-center justify-center">
      <button class="absolute top-2 right-2 md:top-4 md:right-4 text-white p-2 hover:scale-110 transition-transform z-10" data-action="image-viewer#close">
        <%= inline_svg "close.svg", class: "h-6 w-6 md:h-8 md:w-8" %>
      </button>
      <img data-image-viewer-target="image" class="max-h-[85vh] max-w-full object-contain" src="" alt="Full size image">
    </div>
  </div>

  <div class="container mx-auto px-4 py-4 md:py-8">
    <div class="bg-soft-bone card-pixel shadow-lg overflow-hidden mb-4 md:mb-8">
      <div class="h-48 md:h-64 overflow-hidden relative">
        <% project_image = @project.banner.presence || @project.updates.find { |u| u.attachment.present? }&.attachment || "https://raw.githubusercontent.com/hackclub/dinosaurs/main/confused_dinosaur.png" %>
        <img src="<%= project_image %>" alt="<%= @project.title %>" class="w-full h-full object-cover cursor-pointer hover:opacity-90 transition-opacity" data-action="click->image-viewer#open">
        <div class="absolute inset-0 bg-gradient-to-t from-soft-bone/30 to-transparent pointer-events-none"></div>
      </div>

      <div class="p-4 md:p-6">
        <div class="flex flex-col md:flex-row md:items-center mb-4 space-y-3 md:space-y-0">
          <h1 class="text-2xl md:text-3xl 2xl:text-4xl text-black md:flex-grow font-steven"><%= @project.title %></h1>
          <div class="flex items-center space-x-3 md:space-x-4">
            <% if user_signed_in? %>
              <div class="flex items-center space-x-4">
                <div data-controller="modal" class="cursor-pointer">
                  <button data-action="modal#open" class="bg-vintage-red btn-pixel px-4 py-2 flex items-center hover:scale-[1.05] transition-transform">
                    <%= inline_svg "heart.svg", class: "h-5 w-5 md:h-6 md:w-6 2xl:h-7 2xl:w-7 text-white" %>
                    <span class="ml-2 text-white font-steven text-sm md:text-base 2xl:text-xl">
                      <%= @project.followers.count %> <%= 'follower'.pluralize(@project.followers.count) %>
                    </span>
                  </button>
                  <div data-modal-target="modal" class="hidden fixed inset-0 z-50 overflow-auto bg-black bg-opacity-50 flex items-center justify-center p-2 md:p-4">
                    <div class="bg-soft-bone w-full max-w-md card-pixel mx-2 md:mx-auto relative max-h-[80vh] flex flex-col" data-modal-target="container">
                      <div class="absolute -top-6 -right-6 w-12 h-12 md:-top-8 md:-right-8 md:w-16 md:h-16 z-10">
                        <%= image_tag "puppyeyes.svg", class: "w-full h-full", alt: "Puppyeyes peeking" %>
                      </div>
                      <div class="p-3 md:p-4 border-b border-saddle-taupe border-opacity-30 flex-shrink-0">
                        <div class="flex justify-between items-center">
                          <h3 class="text-lg md:text-2xl font-steven">Followers</h3>
                        </div>
                      </div>

                      <div class="p-3 md:p-4 overflow-y-auto">
                        <div class="space-y-4">
                          <% if @project.followers.any? %>
                            <% @project.followers.each do |follower| %>
                              <div class="flex items-center space-x-3">
                                <img src="<%= follower.avatar %>" alt="<%= follower.display_name %>" class="w-10 h-10 rounded-full">
                                <div>
                                  <p class="font-steven text-black"><%= follower.display_name %></p>
                                  <p class="text-sm text-gray-600">
                                    <% if follower.project.present? %>
                                      Check their project out: <%= link_to follower.project.title, project_path(follower.project), class: "text-nice-blue underline" %>
                                    <% else %>
                                      Whoops! Looks like they don't have a project yet. Maybe ask them to start one?
                                    <% end %>
                                  </p>
                                </div>
                              </div>
                            <% end %>
                          <% else %>
                            <div class="text-center">
                              <%= image_tag "puppyeyes.png", class: "w-32 h-32 2xl:w-64 2xl:h-64 mx-auto mb-4 transform scale-x-[-1]", alt: "Puppy Eyes" %>
                              <p class="text-gray-600 text-center text-xl">No followers yet</p>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <%= link_to edit_project_path(@project), class: "px-3 md:px-4 py-2 bg-nice-blue hover:scale-[1.05] text-white transition-transform duration-300 text-sm md:text-base 2xl:text-xl btn-pixel" do %>
                  Edit Project
                <% end %>
              </div>
            <% else %>
              <% if user_signed_in? %>
                <%= render "projects/follow_button", project: @project %>
              <% end %>
            <% end %>
          </div>
        </div>

        <p class="text-black mb-4 md:mb-6 text-gray-600 text-base md:text-lg 2xl:text-xl"><%= @project.description %></p>

        <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
          <% if @project.demo_link.present? %>
            <a href="<%= @project.demo_link %>" target="_blank"
               class="px-3 md:px-4 py-3 md:py-2 bg-forest hover:scale-[1.05] text-white transition-transform duration-300 flex-1 text-center btn-pixel text-base md:text-lg 2xl:text-2xl">
              Demo
            </a>
          <% end %>
          <% if @project.repo_link.present? %>
            <a href="<%= @project.repo_link %>" target="_blank"
               class="px-3 md:px-4 py-3 md:py-2 bg-nice-blue hover:scale-[1.05] text-white transition-transform duration-300 flex-1 text-center btn-pixel text-base md:text-lg 2xl:text-2xl">
              Repository
            </a>
          <% end %>
          <% if @project.readme_link.present? %>
            <a href="<%= @project.readme_link %>" target="_blank"
               class="px-3 md:px-4 py-3 md:py-2 bg-saddle-taupe hover:scale-[1.05] text-white transition-transform duration-300 flex-1 text-center btn-pixel text-base md:text-lg 2xl:text-2xl">
              Documentation
            </a>
          <% end %>
        </div>
      </div>
    </div>

    <% if !@updates.empty? && current_user != @project.user %>
    <div class="flex flex-col justify-between items-start mb-2 md:mb-6">
      <h2 class="text-3xl md:text-5xl font-steven">Project Timeline</h2>
    </div>
    <% end %>

    <% if user_signed_in? && current_user == @project.user %>
      <div id="update-form" class="mb-4 md:mb-6">
        <%= render "projects/update_form" %>
      </div>
    <% end %>

    <div class="relative">
      <% if !@updates.empty? %>
        <div class="absolute left-3 md:left-8 top-0 bottom-0 w-0.5 border-l-2 border-dashed border-saddle-taupe/30"></div>
      <% end %>

      <div id="updates" class="space-y-3 md:space-y-8">
        <% @updates.reverse.each do |update| %>
          <%= render "updates/update", update: update %>
        <% end %>

        <% if @updates.empty? && current_user != @project.user %>
          <div class="bg-soft-bone card-pixel p-6 md:p-12 text-center ml-6 md:ml-16">
            <h2 class="text-xl md:text-2xl 2xl:text-3xl mb-3 md:mb-4 font-steven">No Updates yet</h2>
            <div class="flex justify-center items-center">
              <%= image_tag 'puppyeyes.png', class: 'w-16 h-16 sm:w-48 sm:h-48 2xl:w-64 2xl:h-64 transform scale-x-[-1] mb-4 sm:mb-6' %>
            </div>
          </div>
        <% end %>

        <% if @updates.empty? && ENV['UPDATES_STATUS'] != 'locked' && current_user == @project.user %>
          <div class="bg-soft-bone card-pixel p-6 md:p-12 text-center ml-6 md:ml-16">
            <h2 class="text-xl md:text-2xl 2xl:text-3xl mb-3 md:mb-4 font-steven">No updates yet</h2>
            <div class="flex justify-center items-center">
              <%= image_tag 'puppyeyes.png', class: 'w-16 h-16 sm:w-48 sm:h-48 2xl:w-64 2xl:h-64 transform scale-x-[-1] mb-4 sm:mb-6' %>
            </div>
            <p class="text-sm md:text-base 2xl:text-lg text-gray-600">Post an update!</p>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
