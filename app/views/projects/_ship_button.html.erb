<% if !project.is_shipped %>
  <%= render "shared/button",
      text: "Ship It!",
      kind: "primary",
      icon: "ship.svg",
      data: {
        controller: "modal",
        action: "modal#open",
        modal_id: "#{project.id}",
        modal_type: "is_shipped"
      } %>
<% else %>
  <%= render "shared/button",
      text: "Shipped!",
      kind: "primary",
      icon: "ship.svg",
      disabled: true %>
<% end %>
