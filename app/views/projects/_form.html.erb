<%= form_with model: @project,
    class: "p-3 md:p-6 mx-auto w-[calc(100%-2px)]",
    data: { controller: "project-form", action: "submit->project-form#validateForm" } do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>
  <%= form.submit %>
<% end %>
