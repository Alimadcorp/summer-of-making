<% if current_page?(tutorial_path) %>
<div class="tutorial-overlay"
     aria-live="polite"
     role="dialog"
     aria-labelledby="tutorial-title-<%= tutorial_key %>"
     style="display: none;"
     data-tutorial-step="<%= tutorial_key %>">
  <div class="tutorial-step-container">
    <div class="tutorial-content-card">
      <div class="tutorial-header">
        <div class="tutorial-text">
          <h3 id="tutorial-title-<%= tutorial_key %>" class="tutorial-title"><%= tutorial_title %></h3>
          <p class="tutorial-description font-national-park font-bold tracking-tight"><%= tutorial_description %></p>
        </div>
      </div>

      <div class="tutorial-actions">
        <% if defined?(show_shaking_question) && show_shaking_question %>
          <%= form_with url: complete_soft_tutorial_step_path, method: :post, local: true do |f| %>
            <%= hidden_field_tag :step_name, tutorial_key %>
            <button type="submit" class="tutorial-continue-btn">Got it!</button>
          <% end %>
        <% else %>
          <button type="button"
                  data-action="click->tutorial#toggle"
                  class="tutorial-continue-btn">
            Got it!
          </button>
        <% end %>
      </div>

    </div>

    <div class="tutorial-mascot-container">
      <%= image_tag "tutorial-mascot.png", width: 120, alt: "Tutorial mascot", class: "tutorial-mascot" %>
    </div>
  </div>
</div>
<% end %>
