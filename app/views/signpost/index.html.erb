<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Signpost Dashboard</h1>
    <p class="text-black">Ahhhhh Signpost is a thing. Sign + Post</p>
  </div>

  <!-- Account Status Section -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Account Status</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="bg-white rounded-lg border p-4">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium text-gray-900">Hackatime</h3>
          </div>
          <% if @account_status[:hackatime_linked] %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Connected
            </span>
          <% else %>
            <div class="flex flex-col items-end space-y-2">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                Not Connected
              </span>
              <%= link_to "Connect", hackatime_auth_redirect_path, class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500", target: "_blank" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="bg-white rounded-lg border p-4">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium text-gray-900">Identity Verification</h3>
          </div>
          <% if @account_status[:id_verified] %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Verified
            </span>
          <% else %>
            <div class="flex flex-col items-end space-y-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              Not Verified
            </span>
             <%= link_to "Placeholder", signpost_path, class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500", target: "_blank" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="bg-white rounded-lg border p-4">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium text-gray-900">Identity Vault</h3>
          </div>
          <% if @account_status[:identity_vault_linked] %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Linked
            </span>
          <% else %>
            <div class="flex flex-col items-end space-y-2">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                Not Linked
              </span>
              <%= link_to "Placeholder", signpost_path, class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500", target: "_blank" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% unless @user&.tutorial_progress&.completed? %>
    <!-- At top -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Tutorials</h2>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
          <%= @user&.tutorial_progress&.completion_percentage || 0 %>% Complete
        </span>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @tutorials.each do |tutorial| %>
          <div class="bg-white rounded-lg border p-4 <%= tutorial[:completed] ? 'border-green-200' : '' %>">
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <h3 class="font-medium text-gray-900 flex items-center">
                  <%= tutorial[:title] %>
                  <% if tutorial[:completed] %>
                    <svg class="ml-2 h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                </h3>
                <p class="text-gray-600 text-sm mb-2"><%= tutorial[:description] %></p>
              </div>
            </div>
            <% if tutorial[:completed] %>
              <div class="flex items-center text-sm text-green-600">
                <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Completed
              </div>
            <% else %>
              <a href="<%= tutorial[:path] %>" 
                 class="w-full mt-2 inline-flex justify-center items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 text-center no-underline">
                Start Tutorial
              </a>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Announcements Section -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Announcements</h2>
    <div class="space-y-4">
      <% @announcements.each do |announcement| %>
        <div class="bg-white rounded-lg border p-4">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center mb-2">
                <h3 class="font-medium text-gray-900 mr-2"><%= announcement[:title] %></h3>
                <% case announcement[:type] %>
                <% when 'info' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Info
                  </span>
                <% when 'action' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Action Required
                  </span>
                <% when 'warning' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    Important
                  </span>
                <% end %>
              </div>
              <p class="text-gray-600 mb-2"><%= announcement[:content] %></p>
              <p class="text-sm text-gray-400">
                <%= time_ago_in_words(announcement[:created_at]) %> ago
              </p>
            </div>
            <% if announcement[:action_url] %>
              <a href="<%= announcement[:action_url] %>" 
                 class="ml-4 inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Take Action
              </a>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if @user&.tutorial_progress&.completed? %>
    <!-- Collapsed below announcements -->
    <div class="mb-8">
      <div class="bg-white rounded-lg border">
        <button type="button" 
                class="w-full flex items-center justify-between p-4 text-left focus:outline-none focus:ring-2 focus:ring-blue-500"
                onclick="toggleTutorials()">
          <div class="flex items-center">
            <h2 class="text-xl font-semibold text-gray-900 mr-3">Tutorials</h2>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              All Tutorials Complete
            </span>
          </div>
          <%= inline_svg_tag "chevron-down.svg", class: "h-5 w-5 text-gray-400 transform transition-transform duration-200", id: "tutorials-chevron" %>
        </button>
        
        <div id="tutorials-content" class="hidden border-t border-gray-200 p-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% @tutorials.each do |tutorial| %>
              <div class="bg-gray-50 rounded-lg border p-4 border-green-200">
                <div class="flex items-start justify-between mb-3">
                  <div class="flex-1">
                    <h3 class="font-medium text-gray-900 flex items-center">
                      <%= tutorial[:title] %>
                      <svg class="ml-2 h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                    </h3>
                    <p class="text-gray-600 text-sm mb-2"><%= tutorial[:description] %></p>
                  </div>
                </div>
                <div class="flex items-center text-sm text-green-600">
                  <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Completed
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <script>
      function toggleTutorials() {
        const content = document.getElementById('tutorials-content');
        const chevron = document.getElementById('tutorials-chevron');
        
        if (content.classList.contains('hidden')) {
          content.classList.remove('hidden');
          chevron.classList.add('rotate-180');
        } else {
          content.classList.add('hidden');
          chevron.classList.remove('rotate-180');
        }
      }
    </script>
  <% end %>

  <!-- Progress Summary -->
  <div class="bg-gray-50 rounded-lg p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Progress Summary</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="text-center">
        <div class="text-2xl font-bold text-blue-600">
          <%= @account_status.values.count(true) %>/<%= @account_status.length %>
        </div>
        <div class="text-sm text-gray-600">Account Setup</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-green-600">
          <%= @tutorials.count { |t| t[:completed] } %>/<%= @tutorials.length %>
        </div>
        <div class="text-sm text-gray-600">Tutorials Completed</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-purple-600">
          <%= @announcements.length %>
        </div>
        <div class="text-sm text-gray-600">Recent Announcements</div>
      </div>
    </div>
  </div>
</div>
